        <Anchors>
          <Anchor point="LEFT" relativeTo="$parent">
            <Offset><AbsDimension x="206" y="0"/></Offset>
          </Anchor>
        </Anchors>
        <Frames>
          <ScrollFrame name="$parent_Inner" inherits="UIPanelScrollFrameTemplate">
