<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Frame name="SS_ModifiersControll_Menu" parent = "UIParent" movable="true" inherits = "SS_CloseableFrameWithBG_Template" hidden="false" frameStrata="DIALOG" frameLevel="3">
    <Scripts>
      <OnLoad>
        self:SetSize(430, 240);
        self.title:SetText('Модификаторы');
        self.bg = "Interface\\AddOns\\SnowySystem\\IMG\\event-background";
        self:RegisterForDrag("LeftButton");
        self.closeBtn:SetScript("OnClick", function()
          self:Hide();
        end);
      </OnLoad>
      <OnDragStart>self:StartMoving();</OnDragStart>
      <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
    </Scripts>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Layers>
    </Layers>
    <Frames>
      <ScrollFrame name="$parent_Scroll" inherits="UIPanelScrollFrameTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="20" y="-45"/>
          <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parent" x="20" y="55"/>
          <Anchor point="RIGHT" relativePoint="TOPLEFT" relativeTo="$parent" x="160"/>
        </Anchors>
        <ScrollChild>
          <Frame name="$parent_Content">
            <Size>
              <AbsDimension x="180" y="1" />
            </Size>
            <Layers>
              <Layer>
                <FontString font="Fonts\FRIZQT__.TTF" justifyH="LEFT" justifyV="TOP" maxLines="3" wordwrap="true" text="Нет сохраненных модификаторов">
                  <Color r="1" g="1" b="1" a="1"/>
                  <Size x = "160" y = "40" />
                  <FontHeight val="12"/>
                  <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="0" />
                    <Anchor point="TOPRIGHT" x="0" y="0" />
                  </Anchors>
                </FontString>
              </Layer>
            </Layers>
            <Frames>
            </Frames>
          </Frame>
        </ScrollChild>
      </ScrollFrame>
      <Button name="$parent_Submit_Button" inherits="OptionsButtonTemplate" text="+ Создать">
        <Scripts>
          <OnClick>
            if (SS_ModifiersCreate_Menu:IsVisible()) then
              SS_ModifiersCreate_Menu:Hide();
              self:SetText("+ Создать");
            else
              SS_ModifiersCreate_Menu:Show();
              self:SetText("- Создать");
            end;
          </OnClick>
        </Scripts>
        <Size x = "80" y = "26" />
        <Anchors>
          <Anchor point="BOTTOMLEFT">
            <Offset x="20" y="20"/>
          </Anchor> 
        </Anchors>
        <Scripts>
        </Scripts>
      </Button>
      <Button name="$parent_Reset_Button" inherits="OptionsButtonTemplate" text="Очистить">
        <Size x = "80" y = "26" />
        <Anchors>
          <Anchor point="BOTTOMLEFT">
            <Offset x="105" y="20"/>
          </Anchor> 
        </Anchors>
        <Scripts>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>

