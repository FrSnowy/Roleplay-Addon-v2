          </OnClick>
        </Scripts>
        <Size x = "120" y = "32" />
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset x="20" y="-140"/>
          </Anchor> 
        </Anchors>
      </Button>
      <Button name="$parent_DamageControll_Button" inherits="OptionsButtonTemplate" text="+ Урон">
        <Scripts>
          <OnClick>
            if (SS_DamageControll_Menu:IsVisible()) then SS_DamageControll_Hide();
