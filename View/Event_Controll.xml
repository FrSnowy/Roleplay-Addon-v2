<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Frame name="SS_Event_Controll" parent = "UIParent" movable="true" inherits = "SS_FrameWithBG_Template" hidden="true">
    <Scripts>
      <OnLoad>
        self:SetSize(300, 300);
        self.title:SetText('Управление событием');
        self.bg = "Interface\\AddOns\\SnowySystem\\IMG\\create-menu-background";
        self:RegisterForDrag("LeftButton");
        self:RegisterEvent("PLAYER_ENTERING_WORLD");
      </OnLoad>
			<OnEvent>
        if(event == "PLAYER_ENTERING_WORLD") then
          if (SS_User.settings.currentPlot and SS_LeadingPlots_Current() and SS_LeadingPlots_Current().isEventOngoing) then
            self:Show();
          end;
        end;
      </OnEvent>
      <OnDragStart>self:StartMoving();</OnDragStart>
      <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
    </Scripts>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Frames>
      <Button name="$parent_Stop_Button" inherits="OptionsButtonTemplate" text="Завершить событие">
        <Scripts>
          <OnClick>
            SS_DMtP_StopEvent();
          </OnClick>
        </Scripts>
        <Size x = "150" y = "28" />
        <Anchors>
          <Anchor point="BOTTOM">
            <Offset x="0" y="20"/>
          </Anchor> 
        </Anchors>
      </Button>
    </Frames>
  </Frame>
</Ui>