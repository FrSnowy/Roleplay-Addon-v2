<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Frame name="SS_Modal_EventStart" parent = "UIParent" inherits="SS_FrameWithBG_Template" hidden="true">
    <Scripts>
      <OnLoad>
        self.bg = "Interface\\AddOns\\SnowySystem\\IMG\\popup-background";
        self.title:SetText("Начало события")
        self:SetSize(340, 240);
      </OnLoad>
    </Scripts>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Layers>
      <Layer>
        <FontString name="$parent_Leader" font="Fonts\FRIZQT__.TTF">
          <Color r="1" g="1" b="1" a="1"/>
          <FontHeight val="18"/>
          <Anchors>
            <Anchor point="TOP" x="0" y="-60" />
          </Anchors>
          <Shadow>
            <Offset x="-1" y="-1" />
            <Color r="0" g="0" b="0"/>
          </Shadow>
        </FontString>
        <FontString font="Fonts\FRIZQT__.TTF" text="начинает событие сюжета">
          <Color r="1" g="1" b="1" a="1"/>
          <FontHeight val="16"/>
          <Anchors>
            <Anchor point="TOP" x="0" y="-90" />
          </Anchors>
          <Shadow>
            <Offset x="-1" y="-1" />
            <Color r="0" g="0" b="0"/>
          </Shadow>
        </FontString>
        <FontString name="$parent_PlotName" font="Fonts\FRIZQT__.TTF">
          <Color r="1" g="0.6" b="0" a="1"/>
          <FontHeight val="18"/>
          <Anchors>
            <Anchor point="TOP" x="0" y="-120" />
          </Anchors>
          <Shadow>
            <Offset x="-1" y="-1" />
            <Color r="0" g="0" b="0"/>
          </Shadow>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Button name="$parent_Decline_Button" inherits="OptionsButtonTemplate" text="Отклонить">
        <Size x = "96" y = "32" />
        <Anchors>
          <Anchor point="BOTTOMLEFT">
            <Offset x="20" y="20"/>
          </Anchor> 
        </Anchors>
      </Button>
      <Button name="$parent_Accept_Button" inherits="OptionsButtonTemplate" text="Присоединиться">
        <Size x = "124" y = "32" />
        <Anchors>
          <Anchor point="BOTTOMRIGHT">
            <Offset x="-20" y="20"/>
          </Anchor> 
        </Anchors>
      </Button>
    </Frames>
  </Frame>
</Ui>