    <Frames>
      <Button key="removeBtn" inherits="OptionsButtonTemplate" text="x">
        <Scripts>
          <OnClick>
            local modifier = self:GetParent().modifier;
            local modifierType = ni;
    
            if (SS_Stats_IsStat(modifier.stat)) then modifierType = 'stats';
            elseif (SS_Skills_IsSkill(modifier.stat)) then modifierType = 'skills';
