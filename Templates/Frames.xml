          self.name:SetTextColor(0.75, 0.15, 0.15);
        end;
        modifierName = modifierName..')';
        self.name:SetText(modifierName);

        local modifierDescription = 'Для ';
        if (SS_Stats_IsStat(modifier.stat)) then modifierDescription = modifierDescription..'хар-ки ';
        elseif (SS_Skills_IsSkill(modifier.stat)) then modifierDescription = modifierDescription..'навыка ';
        end;
        modifierDescription = modifierDescription..SS_Locale(modifier.stat);
        self.char:SetText(modifierDescription);

        if (tonumber(modifier.count) > 0) then
          self.count:SetText('ещё '..modifier.count..' бросков');
        else
          self.count:SetText('до отмены');
        end;
